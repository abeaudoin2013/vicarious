<!DOCTYPE html>
<html>
<head>
  <title>Vicarious</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <!-- <script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=ge‌​ometry&language=&hl=&region="></script> -->
	<!--<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>-->
	<!-- <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script>  only if you need custom infoboxes -->
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>


  <%= csrf_meta_tags %>
  
</head>
<body>
	<header>
		<nav>
			<% if current_user %>
<!-- 				<span>Hey there, <%= link_to current_user.username, @user %></span> -->
					<ul>
						<li><%=link_to "Profile", @user %></li>
						<li><%=link_to "Log Out", logout_path %></li>
					</ul>
			<% else %>
					<ul>
						<li><%= link_to "Sign Up", new_user_path %></li>
						<li><%= link_to "Log In", login_path %></li>
					</ul>
			<% end %>	
		</nav>
	</header>
	<% if flash[:notice] %>
					<div class="notice"><%=flash[:notice]%></div> 
	<% end %>

<%= yield %>

<%= yield :javascript %>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDJ_TZroUvL0JtPjeFKkeBL0VHrvFgcW_k&callback=Vicarious.init"></script>
</body>
</html>
